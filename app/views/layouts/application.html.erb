<!DOCTYPE html>
<html>

<head>
  <title>Furima</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <script type="text/javascript" src="https://js.pay.jp/v1/"></script>
  <%= stylesheet_link_tag 'application', media: 'all'%>
  <%= javascript_pack_tag 'application' %>
</head>

<body>
    <% if user_signed_in? %>
      <span><%= current_user.nickname %>
        <li>
          <%= link_to "マイページ", "/users/#{current_user.nickname}" %>
        </li>
      </span>
    <% else %>
        <%= link_to "", new_user_session_path, class: "post" %>
        <%= link_to "", new_user_registration_path, class: "post" %>
    <% end %>
  <%= yield %>
</body>

</html>